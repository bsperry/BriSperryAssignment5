@{
}
@model IEnumerable<string>

@model assignment5.Pages.ShoppingCartModel

<a class="btn btn-block btn-outline-secondary"
   asp-action="Index"
   asp-controller="Home"
   asp-route-category="">
    Home
</a>

@*Loop throught the list of categories and make them a button*@
@foreach (string category in Model)
{@*based on the selected categroy, make the button attribute primary (selected) or secondary *@
<a class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
   asp-action="Index" asp-controller="Home"
   asp-route-category="@category"
   asp-route-page="1">
    @category
</a>
}

<a>@Model.Cart.ComputeCartTotal(Model.Cart.Lines).ToString("c")</a>